{
  "compilerOptions": {
    "allowJs": true,
    "module": "ES2020",
    "target": "ES2018",
    "lib": ["esnext", "dom"],
    "jsx": "react",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "paths": {
      "*": ["node_modules/*", "src/@types/*"]
    }
  },
  "include": ["src/**/*"]
}
